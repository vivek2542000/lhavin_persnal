<div class="container">
    {{#if length}}
        <div class="row">
            {{#each rows}}
                <div class="col-sm-4">
                    <div class="card mt-4" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title mt-2">{{firstname}}</h5>
                            <p class="card-text">{{lastname}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
            <div class="container mt-4">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        {{#if hasPreviousPage}}
                            <li class="page-item">
                                <a class="page-link" href="?page=1">First</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="?page={{previousPage}}">{{previousPage}}</a>
                            </li>
                        {{/if}}
                        <li class="page-item active">
                            <a class="page-link" href="?page={{currentPage}}">{{currentPage}} </a>
                        </li>
                        {{#if hasNextPage}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{nextPage}}">{{nextPage}} </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="?page={{lastPage}}">Last</a>
                            </li>
                        {{/if}}
                    </ul>
                </nav>
            </div>
        </div>
    {{/if}}
    {{#else }}
        <div class="text-center">
            <h5>No products found.</h5>
            <div class="mt-4">
                <a href="/" class="btn btn-outline-primary">Go Home</a>
            </div>
        </div>
    {{/else}}

</div>