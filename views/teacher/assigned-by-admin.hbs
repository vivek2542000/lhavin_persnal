<section id="content-wrapper">
  <div class="container-fluid">
    <div class="row p-t-b-20">
      <div class="col-md-12">
        <div class="form-card no-b">
          <div class="login-form-card">
            {{#if message}}
              <div class="alert alert-success">
                {{#each message}}
                  <p>{{this}}</p>
                {{/each}}
              </div>
            {{/if}}
            <div class="head-title">
              <h2 class="form-title">Assigned by Admin</h2>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="table-responsive">
                  <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                      <tr>
                        <th hidden>Assign id</th>
                        <th>Assign Date</th>
                        <th>PDF Name</th>
                        <th>Description</th>
                        <th>Last Edited</th>
                        <th>Edited By</th>
                        <th>Assigned By</th>
                        <th>Completed Work</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each rows}}

                        <tr>
                          <td hidden>{{assignid}}</td>
                          <td>{{date}}</td>
                          <td>
                            <form action="/teacher/teacher-assigned-view-pdf" method="POST" target="_Blank">
                              <input hidden type="text" value="{{pdfurl}}" name="pdfurl">
                              <button><i class="fa fa-file-pdf-o mr-5"></i>{{pdfname}} -
                                {{pdf_create_time}}</button>
                            </form>

                            {{!-- <a href="/teacher/teacher-assigned-view-pdf?pdf={{pdfurl}}" target="_blank"><i
                                class="fa fa-file-pdf-o mr-5"></i>{{pdfname}} -
                              {{pdf_create_time}}</a> --}}
                          </td>
                          <td>{{teacherDescription}}</td>
                          <td>{{lasteditByTeacher}}</td>
                          <td>{{firstname}} {{lastname}}</td>
                          <td align="center"> <button id="assignadmin" class="badge badge-success"
                              name="assignadminbuton" value="{{assignBy}}">{{assignBy}}</button></td>

                          <td align="center">{{#if pdfOfTeacher}}

                              <form action="/teacher/teacher-assigned-view-pdf" method="POST" target="_Blank">
                                <input hidden type="text" value="{{pdfOfTeacher}}" name="pdfurl">
                                <button class="view-btn">View</button>
                              </form>
                              {{!-- <button <a href={{pdfOfTeacher}} class="edit-btn" style="color: black;"
                                target="_blank"></a>View</button> --}}
                            {{/if}}
                          </td>

                          <td align="center">
                            <form action="/teacher/viewPdf/{{pdfid}}" method="POST">
                              <input hidden name="assignid" value="{{assignid}}">   
                              {{!-- {{#if_equal this.tpdfstatus "0"}}
                            <button type="submit" class="edit-btn" style="color: black;">Edit</button>
                            {{/if_equal}}
                            {{#if_equal this.tpdfstatus "1"}}
                            <button disabled type="submit" class="edit-btn">Edit</button>
                            {{/if_equal}} --}}
                              {{#if pdfOfTeacher}}
                                <button  type="submit" class="edit-btn">Edit</button>
                              {{else}}
                                <button type="submit" class="edit-btn" style="color: black;">Edit</button>
                              {{/if}}
                            </form>
                            <form action="/teacher/editting-history/{{pdfid}}" method="POST">
                              <input hidden name="assignid" value="{{assignid}}">
                              <button type="submit" class="delete-btn" style="color: black;">Logs</button>
                            </form>
                          </td>

                        </tr>

                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</section>
</div>