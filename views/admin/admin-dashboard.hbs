<section id="content-wrapper" style="background-color: #fff!important;">
  <div class="container-fluid">
    {{#if message}}
    <div class="alert alert-success">
      {{#each message}}
      <p>{{this}}</p>
      {{/each}}
    </div>
    {{/if}}
    <div class="row pb-40">
      <div class="col-md-6 wd-50">
        <p class="dash-head" style="margin: 0;">Welcome : <span
            style="display: inline-block; margin-bottom: 0;">{{username}} </span>
        </p>
      </div>
      <div class="col-md-6 wd-50">
        <p class="dash-head" style="text-align: right;margin-bottom: 0;">Last Login : <span
            style="display: inline-block; "> {{#if lastlogintime}} <td>
              {{lastlogintime}}</td>{{else}} <td>
              NA</td>{{/if}} </span>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 wd-25">
        <a href="/admin/student-list">
          <div class="counter-card ">
            <div class="count-icon text-center bg-red"> <i class="fa fa-users fa-2x"></i>
            </div>
            <div class="count-text">
              <h2 class="timer count-title count-number" data-to="{{totalstudents}}" data-speed="1500"></h2>
              <p class="">Total Students</p>
            </div>
          </div>
        </a>
      </div>
      <div class="col-md-6 wd-25">
        <a href="/admin/pdf-dashboard">
          <div class="counter-card ">
            <div class="count-icon text-center bg-brown"> <i class="fa fa-file-pdf-o fa-2x"></i>
            </div>
            <div class="count-text">
              <h2 class="timer count-title count-number" data-to="{{totalpdfs}}" data-speed="1500"></h2>
              <p class="">Total PDF</p>
            </div>
          </div>
        </a>
      </div>
    </div>
    <hr>
    <section class="">
      <div class="tour-head">
        <div class="tour-head-title">

        </div>
      </div>
      <div class="row mt-20">
        <h5><b>Recently assigned to teachers</b></h5>
        <div class="table-responsive mt-20">
          <table id="example56" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>Assign Date</th>
                <th>PDF Name</th>
                <th>Assigned By</th>
                <th>Assign to</th>
                <th>Description</th>
                {{!-- <th>Last Edited</th>
                <th>Action</th> --}}
              </tr>
            </thead>
            {{#each recentAssignedPdf}}
            <tbody>
              <tr>
                <td>{{date}}</td>
                <td> <a href="{{pdfurl}}" target="_blank">{{pdfname}} - {{pdf_create_time}}</a></td>
                <td>{{assignBy}}</td>
                <td>{{firstname}} {{lastname}}</td>
                {{#if teacherDescription}} <td>
                  {{teacherDescription}}</td>{{else}} <td>
                  NA</td>{{/if}}
                {{!-- <td>{{lastedit}}</td> --}}
                {{!-- <td align="center">
                    <table>
                      <tr>
                        <td><a href="" class="edit-btn" data-toggle="modal" data-target="#edit-popup">Edit</a></td>
                        <td><a href="/teacher/student-view-assigned-logs" class="view-btn" title="View Logs">View
                            Logs</a>
                        </td>
                      </tr>
                    </table>
                  </td> --}}
              </tr>
            </tbody>
            {{/each}}
          </table>
        </div>
      </div>
    </section>
  </div>
</section>