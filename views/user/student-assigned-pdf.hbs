<head>
  <title>{{title}}</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="icon" href="/images/favicon.png" type="image/x-icon">
  <!--  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/dataTables.bootstrap4.min.css">

  <link rel="stylesheet" type="text/css" href="/stylesheets/dashboard.css">
  <link rel="stylesheet" type="text/css"
    href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/stylesheets/bootstrap-multiselect.css">
  <link href="/stylesheets/select2.min.css" rel="stylesheet" />
  <link href="/stylesheets/montserrat.css" rel="stylesheet">
  <link href="/stylesheets/intlTelInput.css" rel="stylesheet" media="screen">
</head>

<body>




  <!----------------COntent start-------------->
  <section id="content-wrapper">
    <div class="container-fluid">
      <div class="row p-t-b-20">
        <div class="col-md-12">
          <div class="form-card no-b">
            <div class="login-form-card">
              <!-- <div class="login-form-content"> -->

              <h2 class="form-title">Assigned PDF</h2>
              {{#if message}}
                <div class="alert alert-success">
                  {{#each message}}
                    <p>{{this}}</p>
                  {{/each}}
                </div>
              {{/if}}

              <!--  <div class="form-define-head">
                <h4><span>step 3</span>Other Links</h4>
              </div> -->
              <div class="row">
                <div class="col-md-12">
                  <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                      <thead>
                        <tr>
                          <th hidden> id</th>
                          <th>Assigned Date</th>
                          <th>PDF Name</th>
                          <th>Assigned By</th>
                          <th>Description</th>
                          <th>Last Edit</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      {{#each rows}}
                        <tbody>
                          <tr>
                            <td hidden>{{assignid}}</td>
                            <td>{{dateAssignedByTeacher}}</td>
                            <td>
                              <form action="/user/students-assigned-view-pdf" method="POST" target="_Blank">
                                <input hidden type="text" value="{{this.pdfForStudent}}" name="pdfurl">
                                <button><i class="fa fa-file-pdf-o mr-5"></i>Edited_{{pdfname}} -
                                  {{pdf_create_time}}</button>
                              </form>
                            </td>
                            <td>{{assignByTeacher}}</td>
                            {{#if studentDescription}}
                              <td>
                                {{studentDescription}}</td>
                            {{else}}
                              <td>
                                NA</td>
                            {{/if}}
                            {{#if lastedit}}
                              <td>
                                {{lastedit}}</td>
                            {{else}}
                              <td>
                                NA</td>
                            {{/if}}

                            {{#if this.finalPdfOfStudent}}
                              <td align="center"><span class="badge badge-success">Completed</span></td>
                            {{else}}
                              <td align="center"><span class="badge badge-danger">InCompleted</span></td>
                            {{/if}}

                            <td align="center">
                              <table>
                                <tr>
                                  <td>
                                    <form id="editFormSubmit" action="/user/viewPdf/{{pdfid}}" method="POST">
                                      <input hidden name="assignid" value="{{assignid}}">
                                      {{#if this.finalPdfOfStudent}}
                                        <a disabled>Edit</a>
                                      {{else}}

                                        <button type="submit" id="buttonforsubmit" class="edit-btn"
                                          onclick="formSubmit()">Edit</button>
                                      {{/if}}
                                    </form>
                                    <script>
                                      function formSubmit() {
                                        document.getElementById("editFormSubmit").submit();
                                      }
                                    </script>
                                  </td>
                                  <td>

                                  </td>
                                  {{!-- <td><a href="/user/student-view-assigned-logs" class="view-btn"
                                        title="View Logs">View
                                        Logs</a></td> --}}
                                </tr>
                              </table>
                            </td>

                            <!-- <td align="center" style="white-space: nowrap;"><a href="" class="assign-btn">Shift in Complete</a></td> -->
                          </tr>


                          <!-- <td align="center" style="white-space: nowrap;"><a href="" class="assign-btn">Shift in Complete</a></td> -->


                        </tbody>
                      {{/each}}
                    </table>
                  </div>
                </div>

              </div>

            </div>
          </div>
          <!--  </div> -->
        </div>
      </div>
    </div>
  </section>
  </div>